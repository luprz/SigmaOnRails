    .col-lg-9.col-md-9.col-sm-8
      .container-login#user-container
        .modal-header.title-login
          %h2.hidden-xs 
            %i.fa.fa-puzzle-piece
            Lista de Equipos
          %h2.visible-xs 
            %i.fa.fa-puzzle-piece
            Equipos
        .input-group
          .input-group-addon
            %i.glyphicon.glyphicon-search
          %input.form-control{type:'text', placeholder:'Buscar Cliente...', id:"filter"}
        %table.table-bordered.user-table#table
          %thead 
            %tr 
              %th 
                Cod.
              %th 
                Nombre
              %th.hidden-xs 
                Tipo de Equipos
              %th.hidden-xs
                DescripciÃ³n
              %th 
                Control
          %tbody
            - if @equipos.length > 0
              -@equipos.each do |equipo|
                %tr{id:'datosTabla'}
                  %td
                    = equipo.id
                  %td
                    = equipo.nombre
                  %td.hidden-xs
                    = equipo.tipo_equipo.nombre
                  %td.hidden-xs
                    = equipo.descripcion
                  %td
                    = link_to "<i class='fa fa-eye fa-2x'></i>".html_safe, equipos_path+"/#{equipo.id}", :class=>"btn btn-table"
            - else
              %tr
                %td{colspan:'4'}
                  %center
                    No hay empresas registradas.
                  

        .modal-footer.footer-login

:javascript
  var searchOnTable = function() {
    var table = $('#table');
    var value = this.value;
    table.find('tr').each(function(index, row) {
      var allCells = $(row).find('td');
      if(allCells.length > 0) {
        var found = false;
        allCells.each(function(index, td) {
          var regExp = new RegExp(value, 'i');
          if(regExp.test($(td).text())) {
            found = true;
            return false;
          }
        });
        if (found == true) 
          $(row).show();
        else 
          $(row).hide();
      }
    });
  };

  $(function(){
    $('#filter').keyup(searchOnTable);
  });








