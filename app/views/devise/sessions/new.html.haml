            .section-login
              %i.fa.fa-clock-o.fa-5x
    .col-md-4.col-lg-4.col-sm-6.col-xs-12
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .container-login
          .modal-header.title-login
            %h2 
              %i.fa.fa-lock
              Acceso
          .container-login-form 
            %br/ 
            %div
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, :class=>"input-login"
            %br/
            %div
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "off", :class=>"input-login"
            - if devise_mapping.rememberable?
              %br/
              %div
                = f.check_box :remember_me
                = f.label :remember_me
          .modal-footer.footer-login
            %div= f.submit "Entrar", :class=>"btn btn-app"
          = #render "devise/shared/links"